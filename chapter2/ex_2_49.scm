(define (diagonals)
  (let ((tl (make-vect 0 1))
        (tr (make-vect 1 1))
        (br (make-vect 1 0))
        (bl (make-vect 0 0)))
    (segments->painter (list (make-segment bl tr)
                             (make-segment br tl)))))
; c
(define (diamond)
  (let ((b (make-vect 0 0.5))
        (r (make-vect 1 0.5))
        (t (make-vect 0.5 1))
        (l (make-vect 0 0.5)))
    (segments->painter (list (make-segment b l)
                             (make-segment l t)
                             (make-segment t r)
                             (make-segment r b)))))
