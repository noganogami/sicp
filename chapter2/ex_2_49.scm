                                    (make-vect 0.55 0.775)
                                    (make-vect 0.55 0.75)
                                    (make-vect 0.65 0.75)
                                    (make-vect 1.0 0.4))
                              (list (make-vect 0.0 0.7)
                                    (make-vect 0.2 0.5)
